<main class="contenedor">
    <form action="/vacantes/nueva" method="POST" class="default-form">
        <h3>Información General</h3>

        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: Diseñador Grafico" required>
        </div>
        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="empresa" placeholder="Empresa Contrata" required>
        </div>
        <div class="campo">
            <label>Ubicación</label>
            <input type="text" name="ubicacion" placeholder="Ej: Perú o Remoto" required>
        </div>
        <div class="campo">
            <label>Salario (USD)</label>
            <input type="text" name="salario" placeholder="Ej: $500 USD">
        </div>
        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                <option value=""disabled selected>-- Selecciona --</option>
                <option value="Freelance">Freelance</option>
                <option value="Full-Time">Full-Time</option>
                <option value="Part-Time">Part-Time</option>
                <option value="Por Proyecto">Por Proyecto</option>
            </select>
        </div>
        <h3>Descripción del Puesto</h3>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="trix-container">
                <input type="hidden" id="x" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <h3>Conocimientos</h3>

        <label>Developer Skills</label>
        <ul class="lista-conocimientos">
            {{#seleccionarDevSkills a}}
            {{/seleccionarDevSkills}}
        </ul>

        <label>Soft Skills</label>
        <ul class="lista-conocimientos">
            {{#seleccionarSoftSkills b}}
            {{/seleccionarSoftSkills}}
        </ul>
        <label>Ux/Ui Skills</label>
        <ul class="lista-conocimientos">
            {{#seleccionarUxUiSkills c}}
            {{/seleccionarUxUiSkills}}
        </ul>

        <label>Herramientas</label>
        <ul class="lista-conocimientos">
            {{#seleccionarTools d}}
            {{/seleccionarTools}}
        </ul>
        <label>Idioma</label>
        <ul class="lista-conocimientos"> 
            {{#seleccionarIdioma e}}
            {{/seleccionarIdioma}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>
    </form>
</main>