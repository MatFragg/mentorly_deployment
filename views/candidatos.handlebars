<main class="lista-candidatos">
    <h2>Lista de Candidatos</h2>
    {{#if candidatos.length}}
        {{#each candidatos}}
            <div class="candidato candidato-horizontal">
                <div class="caja" id="caja">
                    <p class="etiqueta">Nombre:</p>
                    <p class="nombre">{{nombre}}</p>
                </div>
                <div class="caja" id="caja">
                    <p class="etiqueta">Email:</p>
                    <p class="nombre">{{email}}</p>
                </div>
                <div class="caja" id="caja">
                    <p class="etiqueta">Telefono</p>
                    <p class="nombre">{{telefono}}</p>
                </div>
                <div class="caja" id="btnc">
                    <a href="/uploads/cv/{{cv}}" class="btn btn-verde">Ver Cv</a>
                </div>
            </div>
        {{/each}}
    {{else }}
        <p>No Hay Candidatos</p>
    {{/if}}
</main>