<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre</label>
            <input value={{usuario.nombre}} type="text" name="nombre" placeholder="Tu Nombre">
        </div>

        <div class="campo">
            <label>E-mail</label>
            <input value={{usuario.email}} type="email" name="email" placeholder="Tu Email">
        </div>

        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="trix-container">
                <input type="hidden" id="x" name="descripcion" value="{{usuario.descripcion}}">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        
        <div class="campo">
            <label>Contraseña</label>
            <input type="password" name="password" placeholder="Tu Contraseña">
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen" placeholder="Tu Imagen de Perfil">
            <img src="/uploads/perfiles/{{usuario.imagen}}" class="admin-perfil" alt="Imagen Usuario">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>
    </form>
</main>